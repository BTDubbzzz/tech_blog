<header class='py-5 bg-light border-bottom mb-4'>
	<div class='container'>
		<div class='text-center my-5'>
			<h1 class='fw-bolder'>My Posts</h1>
			<a href='/newpost' class='btn btn-success btn-lg'>Create new post +</a>
		</div>
	</div>
</header>

<div class='d-flex justify-content-center'>
	<div class='col-6'>
		{{#each posts as |post|}}

			<div class='text-center'>
				<div class='card mt-3'>
					<div class='card-body'>
						<div class='small text-muted'>created
