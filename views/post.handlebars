{{#if logged_in}}
	<h2><button><a href='/dashboard'>Back to dashboard</a></button></h2>
	<h2><button><a href='/'>Back to Home</a></button></h2>
{{/if}}
<div class='text-center'>
	<h2>{{header}}</h2>
	<p>{{body}}</p>
	<p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
{{#if my_post}}
	<p><button id='del-button' data-id='{{id}}'>DEL</button></p>
  <a href="/post/update/{{id}}"><button>EDIT</button></a>
{{/if}}

<h2>Comments</h2>

{{> comments}}

{{#if logged_in}}
<h3>Comment here:</h3>

    <form class="form new-comment-form" data-post-id='{{id}}'>
      <div class="form-group">
        <label for="comment-body">comment:</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
{{/if}}
<script src='/js/post.js'></script>