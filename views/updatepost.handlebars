{{#if logged_in}}
	<h2><button><a href='/dashboard'>Back to dashboard</a></button></h2>
	<h2><button><a href='/'>Back to Home</a></button></h2>
{{/if}}


<form class='text-center form update-post-form' data-post-id='{{id}}'>
	<div class="form-group">
        <h2><input type="text" class="form-input" id="post-header" name="post-header" value="{{header}}"></h2>
    </div>
	<div class="form-group">
        <p> <input type="text" class="form-input" id="post-body" name="post-body" value="{{body}}"></p>
    </div>
	<p>Created by {{user.name}} on {{format_date date_created}}</p>
    <div class="form-group">
        <button type="submit" class="btn btn-warning">SUBMIT</button>
    </div>
</form>

<p><button id='del-button' data-id='{{id}}'>DEL</button></p>


<h2>Comments</h2>

{{> comments}}
<script src='/js/post.js'></script>